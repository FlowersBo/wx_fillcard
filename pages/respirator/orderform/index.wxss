/* pages/respirator/orderform/index.wxss */
page{
  width: 100%;
  background-color: #EBEBEB;
}
.orderformWrap{
  width: 100%;
}
.orderformList{
  width: 100%;
  background-color: #fff;
  margin-bottom: 36rpx;
}
.orderform_top{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 15rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #EBEBEB;
}
.iconWrap{
  width: 100rpx;
  height: 100rpx;
  background-color: #16565B;
  border-radius: 50%;
  line-height: 80rpx;
  text-align: center;
  margin-right: 15rpx;
}
.icon-xiazai{
  font-size: 80rpx;
  color: #fff;
}
.addressWrap{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 12rpx 0;
}
.message{
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
.name{
  margin-right: 15rpx;
}
.phone{
  color: #ccc;
}
.address{
  height: 100rpx;
  font-size: 32rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  line-height: 1.5;
}
.orderform_bottom{
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
}
.status{
  width: 180rpx;
  height: 70rpx;
  font-size: 32rpx;
  border: 1rpx solid #ccc;
  border-radius: 40rpx;
  line-height: 70rpx;
  text-align: center;
  color: #054045;
}
.mask{
  width: 100%;
  text-align: center;
  margin-top: 48%;
}