/* pages/respirator/payments/address/index.wxss */
page{
  width: 100%;
  background-color: #fff;
}
.addressWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.address{
  width: 95%;
}
.inputWrap{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #bbb;
}
.text{
  margin-right: 20rpx;
  font-size: 32rpx;
}
.names{
  margin-right: 55rpx;
}
.picker{
  width: 60%;
  height: 100%;
  line-height: 100rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #bbb;
}
.inp{
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #bbb;
}

.btn{
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  background-color: #545454;
  color: #fff;
  border-radius: 15rpx;
  margin-top: 50rpx;
}