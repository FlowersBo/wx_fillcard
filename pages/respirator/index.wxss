/* pages/respirator/index.wxss */
page{
  width: 100%;
  background-color: #EBEBEB;
}
.respiratorWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.merchant{
  width: 95%;
}
.merchant_img{
  width: 100%;
  height: 580rpx;
  margin-top: 6rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.imgWrap{
  width: 100%;
  height: 150rpx;
}
.img{
  width: 100%;
  height: 100%;
}
.moneyWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding-bottom: 20rpx;
}
.money{
  width: 96%;
  display: flex;
  padding: 10rpx 0;
}
.money_left{
  font-size: 40rpx;
  color: #FE0000;
}
.money_right{
  font-size: 28rpx;
  color: #777777;
  text-decoration:line-through;
  margin-left: 6rpx;
}
.text_description{
  width: 96%;
  font-size: 32rpx;
  line-height: 1.5;
  padding: 10rpx 0;
}

.kzWrap{
  width: 100%;
  height: 2000rpx;
}
.img1{
  width: 100%;
  height: 100%;
}
.img2{
  width: 100%;
  height: 100%;
}
.img3{
  width: 100%;
  height: 100%;
}
/* 底部 */
.btnWrap{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
}
.btn{
  width: 49.8%;
  height: 100%;
  background-color: #F7985E;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}
.kz{
  font-size: 48rpx;
}