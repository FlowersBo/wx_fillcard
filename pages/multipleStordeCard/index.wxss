/* pages/multipleStordeCard/index.wxss */
@import "/wxParse/wxParse.wxss";
page{
  width: 100%;
  background-color: rgb(241, 241, 241);
}
.StordeCardWrp{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.StordeCard{
  width: 97%;
}
.merchantInfo{
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
}
.cardHeader{
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 32rpx;
}
.swiper-item{
  width: 100%;
  height: 400rpx;
}

.slide-image{
  width: 100%;
  height: 100%;
}
/* 地址 */
.shopMessage{
  width: 100%;
  height: 120rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.shopMessage_child{
  height: 50rpx;
  line-height: 70rpx;
  display: flex;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.shopMessageText{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.icon-iconfontxiangxia1copy19{
  font-size: 30rpx;
  margin-left: 20rpx;
}
.icon{
  margin-right: 10rpx;
  font-size: 32rpx;
}

.dealMessageWrap{
  width: 100%;
  background-color: #fff;
  font-size: 32rpx;
  box-sizing: border-box;
  padding: 10rpx;
  margin: 20rpx 0;
}
.dealMessageText{
  color: #bbb;
}
.dealMessage{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 15rpx 0;
}
.dealMessageMoney{
  width: 80%;
  display: flex;
  align-items: center;
}
.dealMessageInp{
  width: 200rpx;
  height: 60rpx;
  border: 1rpx solid #ddd;
  text-align: center;
}
.dealMessageBtn{
  width: 110rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #FDE60C;
  border-radius: 10rpx;
  color: #200;
  border: 1rpx solid #200;
}
.amount{
  font-size: 50rpx;
  color: rgb(223, 15, 15);
}

/* 使用须知 */
/* 详情 */
.explain {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.explain-header {
  width: 100%;
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  color: #fd8f00;
  box-sizing: border-box;
  padding: 0 10rpx;
  border-bottom: 2rpx solid #f5f5f5;  
}

.icon-header {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #c0c0c0;
}
.explain-content{
  box-sizing: border-box;
  padding: 0 10rpx;
}
/* 按钮 */
.faddishBtn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FDE60C;
  color: #200;
  font-size: 40rpx;
  z-index: 10;
}



/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}
/*content*/
.drawer_box {
  width: 700rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  margin: -300rpx 25rpx 0 25rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}

.drawer_content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.drawer_text{
  width: 96%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  background-color: #FF824A;
  border-radius: 15rpx;
  margin-top: 50rpx;
  background-image: linear-gradient(135deg, #FE4A4B, #FE8A4C);
}
.drawer_btn{
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #fff;
  background-color: #FF824A;
  border-radius: 20rpx;
  text-align: center;
  margin-top: 30rpx;
  background-image: linear-gradient(135deg, #FE4A4B, #FE8A4C);
}
.drawer_close{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  top: 0;
  right: 0;
  color: #bbb;
  font-size: 44rpx;
}
