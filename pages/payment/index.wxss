/* pages/payment/index.wxss */
page{
  width: 100%;
}
.paymentWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.payment{
  width: 90%;
  height: 500rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 32rpx;
  color: #A1A1A1;
}
.payment_text{
  width: 100%;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.payment_sum{
  width: 100%;
  text-align: center;
  color: #000;
  font-size: 100rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.money{
  font-size: 70rpx;
}
.wxPay{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pay_text{
  display: flex;
  align-items: center;
}
.dj{
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  background-color: #FDE60C;
  border-radius: 50%;
  box-sizing: border-box;
  position: relative;
}
.icon-wechat-pay-fill{
  margin-right: 15rpx;
  font-size: 48rpx;
}
.icon-duigou1{
  color: #000;
  font-size: 32rpx;
  position: absolute;
  top: -10rpx;
  left: 7rpx;
}
.liabilityWrap{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  text-align: center;
  font-size: 30rpx;
}
.liability{
  color: rgb(24, 52, 175);
}
.btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 46rpx;
  background-color:  #FDE60C;
  position: fixed;
  bottom: 0;
}