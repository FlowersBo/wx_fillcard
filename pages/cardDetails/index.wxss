  height: 130rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.operationWrap{
  display: flex;
  justify-content: space-around;
}
.inp{
  width: 90%;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding-left: 15rpx;
  font-size: 32rpx;
}

.calculate{
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
}
.section{
  color: #FF181F;
