/* 模态框 */
/*button*/
.btnss {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 20rpx;
  text-align: center;
  margin: 50rpx 10%;
  background-color: #FDE50D;
  color: #1b1b1b;
}

/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}
/*content*/
.drawer_box {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -300rpx 75rpx 0 75rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.drawer_title{
  padding:30rpx;
  font: 40rpx "microsoft yahei";
  text-align: center;
  border-bottom: 1rpx solid #ddd;
}
.drawer_content {
  height: 200rpx;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
.mask_text{
  line-height: 1.5;
}
.pirc_text{
  color: #FF181F;
}
.pirc_text:last-child{
  color: #3CC51F;
}
.btnWrap{
  display: flex;
  justify-content: space-between;
}
.btn_ok{
  font: 40rpx "microsoft yahei";
  text-align: center;
  border-top: 2rpx solid #E8E8EA;
  color: #3CC51F;
}
.btn_ok:last-child{
  width: 49.5%;
  height: 80rpx;
  line-height: 80rpx;
  color: #FF181F;
  border-left: 2rpx solid #E8E8EA;
}
.btn_ok:first-child{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
}
.top{
  padding-top:16rpx;
}
.bottom {
  padding-bottom:16rpx;
}
.title {
  height: 60rpx;
  line-height: 60rpx;
  width: 160rpx;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/60rpx "microsoft yahei";
}
.input_base {
  border: 2rpx solid #ccc;
