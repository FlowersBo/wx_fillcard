/* pages/bargainirg/index.wxss */
@import "/wxParse/wxParse.wxss";
page{
  width: 100%;
  height: 100%;
  background-color: #eee9e9;
}
.sellCardWrap{
  width: 100%;
}
.sellCard{
  width: 100%;
}

.swiperWrap{
  position: relative;
}
.photoAlbum{
  position: absolute;
  right: 20rpx;
  bottom: 15rpx;
  height: 50rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 25rpx;
  background-color: #200;
  opacity: 0.7;
  z-index: 100;
}
.icon-tupian{
  font-size: 36rpx;
  color: #fff;
  margin-right: 10rpx;
  margin-bottom: 15rpx;
}

.photoAlbumText{
  font-size: 28rpx;
  color: #fff;
}

.swiper-item {
  width: 100%;
  height: 500rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}
/* 商家信息 */
.merchantMessage{
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 10rpx;
  height: 250rpx;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.shopMessage {
  flex: 1;
  min-width: 0;
  padding-left: 20rpx; 
}
.shopMessage_child {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
}
.shopImg{
  width: 140rpx;
  height: 140rpx;
}
.shopImg image{
  width: 100%;
  height: 100%;
}
.shopMessageText{
  font-size: 28rpx;
  color: #200;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  margin-top: 11rpx;
}
.icon {
  margin-right: 10rpx;
  font-size: 30rpx;
  color: #c0c0c0;
}

.icon-iconfontxiangxia1copy19 {
  margin-left: auto;
}
/* 说明 */
.explain{
  background-color:#fff;
}
.explain_title{
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ececec;
}
.icon-xuzhi1{
  font-weight: 600;
  margin-right: 10rpx;
  font-size: 40rpx;
  color: #c0c0c0;
}
.btn{
  width: 100%;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: yellowgreen;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 90rpx;
}

