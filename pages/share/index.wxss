/* pages/share/index.wxss */
@import "/wxParse/wxParse.wxss";
page{
  width: 100%;
  height: 100%;
  background-color: #EEE9E9;
}
.generalizeDetailsWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.generalizeDetails{
  width: 96%;
}
.imgWrap{
  width: 100%;
  height: 350rpx;
  margin: 20rpx 0;
}
.img{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.cardWrsp{
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-sizing: border-box;
  padding: 15rpx;
  margin-bottom: 80rpx;
}
.cards{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.address{
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
}
.telephone{
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
}
.cardName{
  width: 100%;
  font-size: 32rpx;
  color: #C27D53;
}
.cardDetailsWrap{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: left;
}
.cardDetails{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 28rpx;
  color: #4E4E4E;
}
.money{
  color: #C27D53;
}
.shareBtn{
  width: 100%;
  height: 90rpx;
  background-color: #FE0000;
  color: #fafafa;
  font-size: 40rpx;
  text-align: center;
  line-height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  border-radius: 0;
}
.notice{
  width: 100%;
  margin-top: 20rpx;
  color: #4E4E4E;
}
.headline{
  font-size: 32rpx;
}
.notice_content{
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  line-height: 1.5;
  margin: 0;
}