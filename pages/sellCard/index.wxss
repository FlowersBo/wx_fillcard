/* pages/index/sellCard/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #E9E9E9;
}
.sellCardWrap{
  width: 100%;
}
.cardList_head{
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx;
  font-size: 36rpx;
  font-weight: 900;
  display: flex;
}
.cardList_headText{
  width: 8rpx;
  height: 48rpx;
  background-color: #FDE50D;
  margin-right: 10rpx;
}
.sellCard{
  width: 100%;
}
.boxWrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box{
  height: 500rpx;
  margin-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #757575;
}
.icon-icon_wuxiaoxi-{
  font-size: 400rpx;
}
.cardListWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cardList{
  width: 96%;
}

.cards{
  width: 100%;
  height: 280rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.cardChild{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.shopName{
  width: 100%;
  height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color:rgb(29, 29, 28);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.cardChild_particulars{
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
}
.cardChild_img{
  width: 40%;
  height: 100%;
  border-radius: 10rpx;
}
.contentWrap{
  width: 57%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  justify-content: space-between;
  color: #606060;
}

.caedTime{
  width: 100%;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  color:#F17841;
}
.transfer{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-right: 20rpx; 
}
.surplusAmount{
  width: 100%;
  font-size: 32rpx;
}
.btn_wrap{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.residueDegreeWrap{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.periodValidity{
  font-size: 22rpx;
}
.price_text{
  text-decoration:line-through;
}
.sellCardBtn{
  width: 120rpx;
  height: 60rpx;
  background-color: rgb(216, 37, 13);
  color: #fafafa;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 24rpx;
}