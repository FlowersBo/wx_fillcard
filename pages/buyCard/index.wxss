.item-ansWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  margin-top: 10rpx;
}
.item-ansWrap:last-child{
  margin-bottom: 30rpx;
}
.item-ans {
  width: 100%;
  height: 270rpx;
  background-color: #fff;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 15rpx;
  border-bottom: 1rpx solid #ddd;
