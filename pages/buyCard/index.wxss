.expertInfo {
  flex: 1;
  min-width: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 20rpx 0;
  margin-left: 15rpx;
}
 
.expertInfo .name {
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(44, 44, 44);
}
.expertInfo .tag{
  font-size: 28rpx;
  color: #F17841;
}
.expertInfo .answerHistory{
  width: 100%;
  font-size: 24rpx;
  color: #b0b0b0;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  margin-top: 10rpx;
}
.startWrap{
  display: flex;
  align-items: center;
  color: #FE6000;
}
.startText{
  font-size: 28rpx;
}
