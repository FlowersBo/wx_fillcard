@import "index.skeleton.wxss";

page{
  width: 100%;
  background-color: #f5f5f5;
}
.scrollWrap{
  width: 100%;
}
.tabWrap{
  width: 100%;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.searchWrap{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}
.search{
  width: 94%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  /* margin-top: 15rpx; */
}
.search_inp{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 15rpx;
  font-size:32rpx;
}
.input-placeholder{
  font-size:32rpx;
  color:#ddd;
}
.icon-fangdajing{
  font-size: 54rpx;
}
.tab-h {
  /* margin-top: 100rpx; */
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  border-bottom: 1rpx solid #ccc;
  font-size: 32rpx;
  white-space: nowrap;
  /* position: fixed;
  top: 0;
  left: 0;
  z-index: 99; */
}
 
.tab-item {
  margin: 0 12rpx;
  display: inline-block;
}
 
.tab-item.active {
  position: relative;
}

.tab-itemText {
  background-color: #F2F2F2;
  border-radius: 24rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  color: #200;
}
 
.tab-itemText.activeText {
  background: #FDED01;
  color: #FF5D01;
}
 
.tab-item.active:after {
  content: "";
  display: block;
  height: 4rpx;
  width: 100%;
  background: #FFBD00;
  position: absolute;
  bottom: 1rpx;
}



