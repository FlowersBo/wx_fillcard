/* pages/user/withdrawRecord/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #EEE9E9;
}
.withdrawRecordWrap{
  width: 100%;
  /* display: flex;
  flex-direction: column;
  align-items: center; */
}
.withdrawRecord{
  width: 100%;
}

.particularsWrap{
  width: 100%;
}
.particulars{
  width: 100%;
  background-color: #fafafa;
  font-size: 24rpx;
  color: #AFAFAF;
}
.particularsItem{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
  padding: 15rpx;
}
.item_left{
  flex: 1;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}
.itemWrap{
  display: flex;
  align-items: center;
}
.item_start{
  padding-right: 20rpx;
  font-size: 36rpx;
  color: rgb(22, 22, 22);
}
.item_details{
  padding-top: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.money{
  width: 200rpx;
  height: 100%;
  line-height: 120rpx;
  text-align: right;
  font-size: 34rpx;
  color: #eb1212;
  font-weight: bold;
}
.boxWrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box{
  height: 500rpx;
  margin-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #757575;
}
.icon-icon_wuxiaoxi-{
  font-size: 400rpx;
}