/* pages/user/meVipcard/cardConsume/index.wxss */
@import "/wxParse/wxParse.wxss";
page{
  width: 100%;
  background-color: #e9e9e9;
}
.cardConsumeWrap{
  width: 100%;
}
.cardConsume{
  width: 100%;
}
.card{
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 15rpx 0;
  background-color: #fff;
}
.card_top{
  width: 100%;
  height: 50rpx;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-size: 32rpx;
  font-weight: bold;
}
.card_center{
  width: 500rpx;
  height: 260rpx;
  position: relative;
}
.card_img{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;   
}
.card_content{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 15rpx;
  color: rgb(15, 15, 15);
}
.card_content_top{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-size: 28rpx;
}
.iconfontWrap{
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 40rpx;
}
.card_content_centent{
  width: 100%;
  text-align: center;
  padding-left: 30rpx;
}
.card_content_bottom{
  width: 100%;
  /* text-align: right; */
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.refund{
  
}
.ewm{
  width: 100%;
  margin-top: 2rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 30rpx 0;
}
.img{
  width: 400rpx;
  height: 400rpx; 
}
.img image{
  width: 100%;
  height: 100%; 
}
.ewm-code{
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  color: #898989;
}
/* 须知 */
/* 详情 */
.explain {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
  margin-top: 2rpx;
}

.explain-header {
  width: 100%;
  background-color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  color: #fd8f00;
  box-sizing: border-box;
  padding: 0 10rpx;
  border-bottom: 2rpx solid #f5f5f5;  
}

.icon-header {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #c0c0c0;
}
.explain-content{
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
  text-indent: 46rpx;
}



/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}
/*content*/
.drawer_box {
  width: 700rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -300rpx 25rpx 25rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.drawer_title{
  padding:10rpx 0;
  background-color: #FDE60C;
  font: 40rpx "microsoft yahei";
  text-align: center;
  border-bottom: 1rpx solid #ddd;
}
.drawer_content {
  /* height: 200rpx; */
  padding: 0 15rpx;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  line-height: 1.5;
  font-size: 32rpx;
}
.pirc_text:last-child{
  color: #3CC51F;
}
.btnWrap{
  display: flex;
  justify-content: space-between;
}
.btn_ok{
  font: 40rpx "microsoft yahei";
  text-align: center;
  border-top: 2rpx solid #E8E8EA;
  color: #3CC51F;
}
.btn_ok:last-child{
  width: 49.5%;
  height: 80rpx;
  line-height: 80rpx;
  color: #FF181F;
  border-left: 2rpx solid #E8E8EA;
}
.btn_ok:first-child{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
}
.top{
  padding-top:16rpx;
}
.bottom {
  padding-bottom:16rpx;
}
.title {
  height: 60rpx;
  line-height: 60rpx;
  width: 160rpx;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/60rpx "microsoft yahei";
}
.input_base {
  border: 2rpx solid #ccc;
  padding-left: 10rpx;
  margin-right: 50rpx;
}
.input_h30{
  height: 60rpx;
  line-height: 60rpx;
}
.input_h60{
  height: 180rpx;
}
.input_view{
  font: 24rpx "microsoft yahei";
  background: #fff;
  color:#000;
  line-height: 60rpx;
}

radio{
  margin-right: 40rpx;
}
.grid { display: -webkit-box; display: box; }
.col-0 {-webkit-box-flex:0;box-flex:0;}
.col-1 {-webkit-box-flex:1;box-flex:1;}
.fl { float: left;}
.fr { float: right;}