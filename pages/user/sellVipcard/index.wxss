/* pages/user/sellVipcard/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #eee9e9;
}
.sellVipcardWrap{
  width: 100%;
}
.sellCard{
  width: 100%;
}
.cardListWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cardList{
  width: 96%;
}

.cards{
  width: 100%;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.cardChild{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.shopNameWrap{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shopName{
  width: 80%;
  height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color:rgb(29, 29, 28);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.shopstate{
  font-size: 28rpx;
  color: #ddd;
}
.cardChild_particulars{
  width: 100%;
  height: 270rpx;
  display: flex;
  justify-content: space-between;
}
.cardChild_img{
  width: 280rpx;
  height: 170rpx;
  border-radius: 10rpx;
}
.contentWrap{
  width: 57%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  justify-content: space-between;
  color: #606060;
}

.caedTime{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  color:#F17841;
}
.transfer{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-right: 20rpx; 
}
.periodValidity{
  font-size: 22rpx;
}
.price_text{
  text-decoration:line-through;
}
.btn_wrap{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.sellCardBtn{
  width: 140rpx;
  height: 60rpx;
  background-color: rgb(216, 37, 13);
  color: #fafafa;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 24rpx;
}
.sellCardBtn:first-child{
  background-color: #aaaaaa;
}
.boxWrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box{
  height: 500rpx;
  margin-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #757575;
}
.icon-icon_wuxiaoxi-{
  font-size: 400rpx;
}