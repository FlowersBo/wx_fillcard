.caedTime{
  font-size: 40rpx;
  color:#F17841;
  box-sizing: border-box;
  padding-right: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.priceWrap{
  width: 100%;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-right: 5rpx;
}
.transfer_marketPrice{
  text-decoration:line-through;
}
.transfer_price{
  color: rgb(233, 78, 6);
}
.btnWrap{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-right: 10rpx;
  height: 60rpx;
}
.periodValidity{
  font-size: 22rpx;
  margin-right: 25rpx;
  line-height: 80rpx;
}
.btn{
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: rgb(233, 9, 9);
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
}
