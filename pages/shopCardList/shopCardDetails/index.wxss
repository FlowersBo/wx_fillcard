@import "/wxParse/wxParse.wxss";
page{
  width: 100%;
  background-color: #F2F2F2;
}
.modificationCardWrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modificationCard{
  width: 98%;
}
.cardMessageWrap{
  width: 100%;
  /* height: 600rpx; */
  background-color: #fff;
  border-radius: 20rpx;
}
.cardMessage{
  width: 100%;
  height: 100%;
}
.cardMessageHeader{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
}
