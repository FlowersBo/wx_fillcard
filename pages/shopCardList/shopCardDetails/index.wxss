.swiper-item {
  width: 100%;
  height: 500rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.message_header{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.box{
  width: 8rpx;
  height: 70rpx;
  background-color: #FCE400;
  margin: 0 10rpx;
}
.message_header_text{
  font-size: 36rpx;
  color: #ccc;
}
.message{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.message_child{
  width: 32%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}
.shopMessageText{
  width: 90%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.notice{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 90rpx;
}
.notice_content{
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 5rpx;
  line-height: 1.5;
}
.wxParse-p{
  width: 100%;
}
.wxParse-img{
  width: 100%;
}
.price_btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: rgb(235, 15, 15);
}
button{
  border-radius: 0;
}
/* 地址 */
.shopMessage{
  width: 100%;
  height: 120rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-sizing: border-box;
  padding-left: 10rpx; 
}
.shopMessage_child{
  height: 50rpx;
  line-height: 70rpx;
  display: flex;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.icon{
  margin-right: 10rpx;
  font-size: 32rpx;
}
.icon-iconfontxiangxia1copy19{
  font-size: 30rpx;
  margin-left: 20rpx;
}