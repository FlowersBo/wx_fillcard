/* pages/faddishCardList/index.wxss */
page {
  width: 100%;
  background-color: #eee9e9;
}
.cardListWrap{
  width: 100%;
}

/* 搜索 */
.searchWrap {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  background-color: #fff;
  margin-bottom: 10rpx;
  padding-bottom: 15rpx;
}

.search {
  width: 94%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  /* margin-top: 15rpx; */
}

.search_inp {
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 15rpx;
  font-size: 32rpx;
  color: #ccc;
}

.icon-fangdajing {
  font-size: 54rpx;
}
.cardList {
  width: 100%;
  margin-bottom: 10rpx;
}

.cards {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.card-item {
  flex-shrink: 0;
  box-sizing: border-box;
  padding: 10rpx;
}
.card-item:nth-child(even){
  padding-left: 5rpx;
}
.card-item:nth-child(odd){
  padding-right: 5rpx;
}
.item{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  background-color: #fff;
}
.card-img{
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
}
.card-content{
  width: 100%;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.card-title{
  width: 100%;
  font-size: 28rpx;
  color: #022;
  overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  line-height: 1.5;
  margin-bottom: 10rpx;
}
.card-price{
  color: #EB2E23;
}
.card-price text:last-child{
  color: #999999;
  margin-left: 16rpx;
  text-decoration: line-through;
}
.boxWrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box{
  height: 500rpx;
  margin-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #757575;
}
.icon-icon_wuxiaoxi-{
  font-size: 400rpx;
}

/* 会员卡 */
