.cardTitle{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #ddd;
  background-color: #fff;
  justify-content: center;
}
.icon-xuzhi1{
  font-size: 44rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}
.cardsss{
  width: 100%;
  height: 280rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
