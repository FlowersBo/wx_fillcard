/* component/author/author.wxss */
.authorWrap{
  margin-top: 150rpx;
}
.author{
  width: 600rpx;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.imgWrap{
  width: 500rpx;
  height: 250rpx;
  background-color: #FCEA1E;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.author_img{
  width: 200rpx;
  height: 200rpx;
}
.textWrap{
  width: 50%;
  height: 50%;
  font-size: 32rpx;
}
.text_item{
  width: 100%;
  text-align: center;
}
.author_btn{
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 20rpx;
  border: none;
  background-color: #FCEA1E;
  color: #000;
}
.iconWrap{
  width: 100%;
  overflow: hidden;
}
.author_icon{
  float: right;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
}
.author_btn::after{ 
  border: none; 
} 
